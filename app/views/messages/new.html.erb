<%- content_for(:head) do -%>
<%= javascript_include_tag "application"  %>
<%= javascript_include_tag "autocomplete-rails.js" %>
<%= stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.8/themes/ui-lightness/jquery-ui.css" %>
<%- end -%>
<fieldset id="outer">
  <legend>New message</legend>
  <%= form_for @message  do |f| %>
    Send To <%= f.autocomplete_field :sender_id, autocomplete_user_name_users_path ,:"data-delimiter" => ';',:size=> 70%>
  <div class="field">
    <%= f.label :subject %>&nbsp;&nbsp;
    <%= f.text_field :subject,:size=> 70 %>
  </div>
    <%= render :partial => 'form',
           :locals => {:f => f}
%>
  <% end %>
</fieldset>
<%= link_to 'Back', messages_path %>

