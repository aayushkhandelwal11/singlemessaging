<% if notice !=nil %>
<p id="notice"><%= notice %></p>
<%end%>
<h1>Listing Drafts</h1>
<%= paginate @messages %>
<table>
  <tr>
    <th>Content</th>
    <th> Date</th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
    <td><%= message.subject %></td>
    <td><%= message.updated_at.ctime %></td>
    <td><%= link_to 'edit' %></td>
    <td><%= link_to 'Delete', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>

    
</tr>
<% end %>
</table>

