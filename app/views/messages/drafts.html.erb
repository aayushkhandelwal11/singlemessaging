<h1>Listing Drafts</h1>
<%= form_tag show_delete_messages_path,:method => :put do %>
<% if @messages.length > 0  %>
<%= paginate @messages %>
<table WIDTH="90%" id="center">
  <tr>
    <th></th>
    <th>Content</th>
    <th> Date</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
<% @messages.each do |message| %>
  <tr> 
    <td><%= check_box_tag "message_ids[]", message.id %></td>
    <td><%= message.subject %></td>
    <td><%= message.updated_at.ctime %></td>
    <td><%= link_to 'edit' ,edit_message_path(message.id)%></td>
    <td><%= link_to "Delete", messages_url({:id => message.id}) %></td>
  </tr>
<% end %>
</table>
<br />
<% else %>
<h3> Nothing for you</h3>
<%end%>
<%= submit_tag "Delete Checked",:class => 'create' %>
<%end %>
<%= javascript_include_tag "jquery-1.8.0.min.js"  %>
<%= javascript_include_tag "checking.js" %>