<div class="depot_form">
  <%= form_for @user, :url => authentication_change_email_url do |f| %>
    <fieldset>
      <legend>Enter Email</legend>
      <table>
      
       <tr>
          <td><%= f.label :email %></td>
          <td><%= f.email_field :email, size: 40 %></td>
          <td><% if @user.errors[:email].any? %><div id="errors"><%= @user.errors.get(:email).join(', ') %></div><% end %></td>
       </tr>
       </table>
       <%= f.submit %>
     </div>
   </fieldset>
  <% end %>
 </div>

