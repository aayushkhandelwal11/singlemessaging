<%= "Sign In" %>
<%= stylesheet_link_tag "application" %>
<%= stylesheet_link_tag "authentication" %>
<% if @authentications %>
  <% unless @authentications.empty? %>
    <p><strong>You can sign in to this account using:</strong></p>
    <div class="authentications">
      <% for authentication in @authentications %>
        <div class="box">
          <%= image_tag "#{authentication.provider}.png", :size => "32x32" %>
          <div class="provider"><%= authentication.provider.titleize %></div>
          <div class="uid"><%= authentication.uid %></div>
          
          <%= link_to "X", authentication_destroy_url(:id => authentication.id), :confirm => 'Are you sure you want to remove this authentication option?', :method => :get, :class => "remove" %>
          
        </div>
      <% end %>
      <div class="clear"></div>
    </div>
  <% end %>
  <br><br><br>
  <p><strong>Add another service to sign in with:</strong></p>
<% else %>

  <p><strong>Sign in through one of these services:</strong></p>
<% end %>

<a href="/auth/twitter" class="auth_provider">
  <%= image_tag "twitter.png", :size => "50x50", :alt => "Twitter" %>
  Twitter
</a>
<a href="/auth/facebook" class="auth_provider">
  <%= image_tag "facebook.png", :size => "50x50", :alt => "Facebook" %>
  Facebook
</a>
