<% if notice !=nil %>
<p id="notice"><%= notice %></p>
<%end%>
<h1>Listing drafts</h1>
<%= paginate @threadmessages %>
<% if (Message.find session[:message_id]).to_user_id != session[:user_id]%>
<%= image_tag (Message.find session[:message_id]).to_user.avatar.url(:small) %>
<% else %>
<%= image_tag (Message.find session[:message_id]).from_user.avatar.url(:small) %>
<% end %>
<table>
  <tr>
    <th>Description</th>
    <th>From user</th>
    <th>Time</th>
    <th></th>
    <th></th>
  </tr>

<% @threadmessages.each do |threadmessage| %>
<tr>
    <td><%=truncate(threadmessage.description, :length => 25) %></td>
    <td><%= threadmessage.user.name %></td>
    <td><%= threadmessage.updated_at.ctime %></td>    
    <td><%= link_to 'Edit', edit_threadmessage_path(threadmessage) %></td>
    <td><%= link_to 'Destroy', threadmessage, confirm: 'Are you sure?', method: :delete %></td>
</tr>
<% end %>
</table>

<br />

