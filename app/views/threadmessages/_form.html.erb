<%= form_for @threadmessage,:multipart => true do |f| %>
  <% if @threadmessage.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@threadmessage.errors.count, "error") %> prohibited this threadmessage from being saved:</h2>
      <ul>
      <% @threadmessage.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <%= f.fields_for :assets do |builder| %>
         <%= builder.label :document,"Attach a file" %> 
         <%= builder.file_field :document %><br />
   <% end %>
  <%= f.submit 'send',{:draft => 1} %>
  <%= f.submit 'save to drafts', {:draft => 0} %> 
<% end %>
