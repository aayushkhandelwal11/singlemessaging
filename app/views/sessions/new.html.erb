<div class="depot_form">
   <%= form_tag('/sessions/create',:method => :get) do %>
    <fieldset>
      <legend>Please Log In</legend>

      <table>
        <tr>
          <td><%= label_tag :email, 'Email:' %></td>
          <td><%= email_field :email, params[:email] %></td>
        </tr>
        <tr>
          <td><%= label_tag :password, 'Password:' %></td>
          <td><%= password_field_tag :password, params[:password] , size: 30%></td>
        </tr>

      </table>
      <div class="field">

        <%= check_box_tag :remember_me, 1, params[:remember_me] %>
                <%= label_tag :remember_me %>
      </div>
      <%= submit_tag "Login" %>
      </div>
    </fieldset>
  <% end %>
</div>

