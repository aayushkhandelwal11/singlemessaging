<div class="depot_form">
  <%= form_for @user,:url => send_password_users_path ,:method =>"get" do |f| %>
  <fieldset>
    <legend><%= t('users.new.enter_details') %></legend>
    <table>
      <tr>
        <td><%= f.label :name %></td>
        <td><%= f.text_field :name, size: 40 %></td>
      </tr>
      <tr>
        <td><%= f.label :email %></td>
        <td><%= f.email_field :email, size: 40 %></td>
      </tr>
    </table><br><br>
    <%= f.submit t('verify') %>
  </fieldset>
  <% end %>
</div>

