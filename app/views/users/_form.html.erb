<div class="depot_form">
  <%= form_for @user,:html => { :multipart => true}  do |f| %>
    <fieldset>
      <legend>Enter User Details</legend>
      <table>
        <tr>
          <td><%= f.label :name %></td>
          <% if @user.errors[:name].any? %><td class="error"><% else %><td><% end %><%= f.text_field :name, size: 40 %></td>
          <td><% if @user.errors[:name].any? %><div id="errors"><%= @user.errors.get(:name).join(', ') %></div><% end %></td>
       </tr>
       <tr>
          <td><%= f.label :email %></td>
          <% if @user.errors[:email].any? %><td class="error"><% else %><td><% end %><%= f.email_field :email, size: 40 %></td>
          <td><% if @user.errors[:email].any? %><div id="errors"><%= @user.errors.get(:email).join(', ') %></div><% end %></td>
       </tr>
       <tr>
          <td><%= f.label :age %></td>
          <% if @user.errors[:age].any? %><td class="error"><% else %><td><% end %><%= f.text_field :age, size: 40 %></td>
          <td><% if @user.errors[:age].any? %><div id="errors"><%= @user.errors.get(:age).join(', ') %></div><% end %></td>
       </tr>
       <tr>
          <td><%= f.label :avatar%></td>
<% if @user.errors[:avatar].any? %><td class="error"><% else %><td><% end %><%= f.file_field :avatar %></td>
          <td><% if @user.errors[:avatar].any? %><div id="errors"><%= @user.errors.get(:avatar_content_type).join(', ')  %><%= @user.errors.get(:avtar_file_size)  %></div><% end %></td>
       </tr>
       <tr>
          <td><%= f.label :password, 'Password' %></td>
          <% if @user.errors[:password].any? %><td class="error"><% else %><td><% end %><%= f.password_field :password, size: 40 %></td>
          <td><% if @user.errors[:password].any? %><div id="errors"><%= @user.errors.get(:password).join(', ') %></div><% end %></td>
       </tr>
       <tr>
          <td><%= f.label :password_confirmation, 'Confirm' %>:</td>
          <% if @user.errors[:password_confirmation].any? %><td class="error"><% else %><td><% end %><%= f.password_field :password_confirmation, size: 40 %></td>
          <td><% if @user.errors[:password_confirmation].any? %><div id="errors"><%= @user.errors.get(:password_confirmation) %></div><% end %></td>
       </tr>
       <tr> 
          <td><%= f.label :time_zone,'Time Zone'%></td>
          <td><%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.all %></td>
       </tr>  
     </table>
     <br><br>&nbsp;&nbsp;&nbsp;&nbsp;<%= f.check_box :notification %> Check To receive notifications from site
     <div>
       <%= f.submit %>
     </div>
   </fieldset>
  <% end %>
 </div>

